<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DDMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameyout_bigVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/camera_unavailable"/>
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="@dimen/cardview_compat_inset_shadow"
                android:layout_height="match_parent"
                android:layout_weight="0.75">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="0.75"
                    android:background="#00FF9800"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    tools:ignore="Orientation">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:background="#00F44336">

                        <Button
                            android:id="@+id/btn_speaker"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_above="@+id/btn_pixels"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/activity_main_speaker"
                            android:onClick="click" />

                        <Button
                            android:id="@+id/btn_pixels"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_above="@+id/btn_microphone"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/activity_main_pixels"
                            android:textColor="@color/design_default_color_background"
                            android:textSize="20dp"
                            android:text="标清"
                            android:onClick="click" />

                        <Button
                            android:id="@+id/btn_microphone"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/activity_main_microphone"
                            android:onClick="click" />

                        <Button
                            android:id="@+id/btn_mute"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/btn_microphone"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/activity_main_mute"
                            android:onClick="click" />

                        <Button
                            android:id="@+id/btn_camera"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/btn_mute"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/camera"
                            android:onClick="click" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="@dimen/cardview_compat_inset_shadow"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="#00E91E63"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:id="@+id/frameyout_smallVideoOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_compat_inset_shadow"
                    android:layout_weight="0.25"
                    android:background="#000000"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/camera_unavailable"/>
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameyout_smallVideoTow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_compat_inset_shadow"
                    android:layout_weight="0.25"
                    android:background="#000000"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/camera_unavailable"/>
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameyout_smallVideoThree"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_compat_inset_shadow"
                    android:layout_weight="0.25"
                    android:background="#000000"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/camera_unavailable"/>
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameyout_smallVideoFour"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_compat_inset_shadow"
                    android:layout_weight="0.25"
                    android:background="#000000"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/camera_unavailable"/>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/version_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="8dp"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:text="V " />
    </RelativeLayout>

    <View
        android:id="@+id/id_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/focus_bg"
        android:visibility="gone" />

</LinearLayout>